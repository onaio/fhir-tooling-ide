CREATE TABLE IF NOT EXISTS `sm` (
    `id` TEXT PRIMARY KEY NOT NULL,
    `title` TEXT NOT NULL,
    `body` TEXT NOT NULL,
    `source` TEXT NOT NULL
);

selectAll:
SELECT * FROM `sm`;

insert:
INSERT INTO `sm` (`id`, `title`, `body`, `source`)
VALUES (?, ?, ?, ?);

update:
UPDATE `sm`
SET `title` = ?, `body` = ?, `source` = ?
WHERE `id` = ?;

delete:
DELETE FROM `sm`
WHERE `id` = ?;